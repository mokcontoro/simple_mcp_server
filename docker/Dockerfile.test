FROM python:3.11-slim

# Install pipx
RUN pip install pipx && pipx ensurepath
ENV PATH="/root/.local/bin:$PATH"

# Copy source
WORKDIR /app
COPY . .

# Test: Install via pipx from local source
RUN pipx install .

# Verify installation
RUN which simple-mcp-server

# Default command
CMD ["simple-mcp-server"]
